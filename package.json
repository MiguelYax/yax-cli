{
  "name": "yax-cli",
  "version": "0.1.1",
  "description": "Yet another command line tool using Javascript. (By the way my last name is Yax)",
  "main": "dist/index.js",
  "types": "/dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "jest",
    "dev": "tsc --watch --sourceMap",
    "lint": "eslint . --ignore-pattern dist",
    "lint:fix": "eslint . --fix --ignore-pattern dist",
    "build": "tsc",
    "coverage": "open ./coverage/lcov-report/index.html",
    "version-packages": "changeset version && npm i --package-lock-only",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "javascript",
    "typescript",
    "cli"
  ],
  "author": "Miguel Yax <mig_dj@hotmail.com>",
  "license": "MIT",
  "volta": {
    "node": "20.18.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.13.0",
    "@types/debug": "^4.1.12",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "dependencies": {
    "debug": "^4.3.7"
  }
}
